<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="phone_box">Phone</label>
        <input id="phone_box" name="query_phone" value="<%= @current_user.phone %>">
      </div>
      <div>
        <label for="profile_photo_box">Profile photo</label>
        <input id="profile_photo_box" name="query_profile_photo" value="<%= @current_user.profile_photo %>">
      </div>
      <div>
        <label for="roles_id_box">Roles</label>
        <input id="roles_id_box" name="query_roles_id" value="<%= @current_user.roles_id %>">
      </div>
      <div>
        <label for="issues_id_box">Issues</label>
        <input id="issues_id_box" name="query_issues_id" value="<%= @current_user.issues_id %>">
      </div>
      <div>
        <label for="building_id_box">Building</label>
        <input id="building_id_box" name="query_building_id" value="<%= @current_user.building_id %>">
      </div>
      <div>
        <label for="roles_count_box">Roles count</label>
        <input id="roles_count_box" name="query_roles_count" value="<%= @current_user.roles_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
