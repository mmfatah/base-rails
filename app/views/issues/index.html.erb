<div>
  <div>
    <h1>
      List of all issues
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new issue
    </h2>

    <form action="/insert_issue" method="post">
      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <div>
        <label for="users_count_box">
          Users count
        </label>

        <input type="text" id="users_count_box" name="query_users_count">
      </div>

      <button>
        Create issue
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Comments count
        </th>

        <th>
          Users count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_issues.each do |an_issue| %>
      <tr>
        <td>
          <%= an_issue.id %>
        </td>

        <td>
          <%= an_issue.status %>
        </td>

        <td>
          <%= an_issue.description %>
        </td>

        <td>
          <%= an_issue.user_id %>
        </td>

        <td>
          <%= an_issue.comments_count %>
        </td>

        <td>
          <%= an_issue.users_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_issue.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_issue.updated_at) %> ago
        </td>

        <td>
          <a href="/issues/<%= an_issue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
